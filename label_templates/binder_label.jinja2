<style>
    .label-{{ start_year }}-{{ short_code }} {
        width: {{ width_mm }}mm;
        height: {{ height_mm }}mm;
        max-height: {{ height_mm }}mm;
        min-height: {{ height_mm }}mm;
        border: 1px solid black;
        position: relative;
        display: inline-block;
        font-family: {{ style.font_regular }};
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        overflow: hidden;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }
    
    {% if is_emergency %}
    .label-{{ start_year }}-{{ short_code }}::after {
        content: '';
        position: absolute;
        top: 1.2px;
        left: 1.2px;
        right: 1.2px;
        bottom: 1.2px;
        border: {{ style.emergency_border_mm }}mm solid {{ base_color }};
        pointer-events: none;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }
    {% endif %}
    
    .label-{{ start_year }}-{{ short_code }} .top-bar {
        background-color: {{ accent_color }} !important;
        height: {{ style.top_bar_height_mm }}mm;
        padding: {{ style.padding }}mm;
        position: relative;
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
    }
    
    .label-{{ start_year }}-{{ short_code }} .category-name {
        font-family: {{ style.font_bold }};
        font-size: {{ style.font_size_header }}pt;
        margin-bottom: 2mm;
    }
    
    .label-{{ start_year }}-{{ short_code }} .label-id {
        font-family: {{ style.font_regular }};
        font-size: {{ style.font_size_subheader }}pt;
    }
    
    .label-{{ start_year }}-{{ short_code }} .content-area {
        padding: {{ style.padding }}mm;
        padding-top: 5mm;
        max-height: calc({{ height_mm }}mm - {{ style.top_bar_height_mm }}mm - 40mm);
        overflow: hidden;
        box-sizing: border-box;
    }
    
    .label-{{ start_year }}-{{ short_code }} .subcategory-list {
        font-family: {{ style.font_regular }};
        font-size: {{ style.font_size_body - 1 }}pt;
        line-height: 1.1;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .label-{{ start_year }}-{{ short_code }} .subcategory-list li {
        margin-bottom: 1.5mm;
    }
    
    .label-{{ start_year }}-{{ short_code }} .subcategory-list li:before {
        content: "â€¢ ";
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline {
        position: absolute;
        bottom: 3mm;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-track {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4mm;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-year {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1mm;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-circle {
        width: 5mm;
        height: 5mm;
        border: 1.5px solid black;
        border-radius: 50%;
        background: white;
    }
    
    .label-{{ start_year }}-{{ short_code }} .year-label {
        font-size: 6pt;
        font-weight: bold;
    }
    
    .label-{{ start_year }}-{{ short_code }} .year-blank {
        height: 2mm;
        border-bottom: 1px solid #ccc;
        width: 12mm;
    }
    
    {% if is_emergency %}
    .label-{{ start_year }}-{{ short_code }} .emergency-message {
        position: absolute;
        top: 45%;
        left: {{ style.padding }}mm;
        right: {{ style.padding }}mm;
        transform: translateY(-50%);
        text-align: center;
        font-family: {{ style.font_bold }};
        font-size: 5pt;
        line-height: 1.2;
        word-wrap: break-word;
        overflow-wrap: break-word;
        hyphens: auto;
        max-height: 25mm;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
    }
    {% endif %}
</style>

<script>
    // Calculate contrast color for text based on background
    (function() {
        function getContrastColor(hexColor) {
            hexColor = hexColor.replace('#', '');
            const r = parseInt(hexColor.substr(0, 2), 16);
            const g = parseInt(hexColor.substr(2, 2), 16);
            const b = parseInt(hexColor.substr(4, 2), 16);
            const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
            return luminance > 0.5 ? '#000000' : '#ffffff';
        }
        
        window.addEventListener('DOMContentLoaded', function() {
            const topBar = document.querySelector('.label-{{ start_year }}-{{ short_code }} .top-bar');
            if (topBar) {
                const bgColor = window.getComputedStyle(topBar).backgroundColor;
                const rgb = bgColor.match(/\d+/g);
                if (rgb) {
                    const hex = '#' + rgb.map(x => {
                        const h = parseInt(x).toString(16);
                        return h.length === 1 ? '0' + h : h;
                    }).join('');
                    const contrastColor = getContrastColor(hex);
                    topBar.style.color = contrastColor;
                }
            }
        });
    })();
</script>

<div class="label-{{ start_year }}-{{ short_code }}">
    <div class="top-bar">
        <div class="category-name">{{ category }}</div>
        <div class="label-id">{{ short_code }}-{{ start_year }}</div>
    </div>
    
    <div class="content-area">
        <ul class="subcategory-list">
            {% for subcat in subcategories[:4] %}
            <li>{{ subcat }}</li>
            {% endfor %}
        </ul>
    </div>
    
    <div class="timeline">
        <div class="timeline-track">
            <div class="timeline-year">
                <div class="timeline-circle"></div>
                <div class="year-label">{{ start_year }}</div>
            </div>
            {% for i in range(1, 3) %}
            <div class="timeline-year">
                <div class="timeline-circle"></div>
                <div class="year-blank"></div>
            </div>
            {% endfor %}
        </div>
    </div>
    
    {% if is_emergency %}
    <div class="emergency-message">
        {{ emergency_text|replace('\n', '<br>')|safe }}
    </div>
    {% endif %}
</div>