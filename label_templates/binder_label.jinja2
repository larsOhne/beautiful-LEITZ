<style>
    .label-{{ start_year }}-{{ short_code }} {
        width: {{ width_mm }}mm;
        height: {{ height_mm }}mm;
        max-height: {{ height_mm }}mm;
        min-height: {{ height_mm }}mm;
        border: 1px solid black;
        position: relative;
        display: inline-block;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: {{ accent_color }}40;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }
    
    .label-{{ start_year }}-{{ short_code }} .top-bar {
        background-color: {{ accent_color }} !important;
        height: {{ style.top_bar_height_mm }}mm;
        padding: {{ style.padding }}mm;
        position: relative;
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
    
    .label-{{ start_year }}-{{ short_code }} .category-name {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        font-weight: 700;
        font-size: {{ style.font_size_header + 2 }}pt;
        margin-bottom: 1mm;
    }
    
    .label-{{ start_year }}-{{ short_code }} .label-id {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        font-size: {{ style.font_size_subheader }}pt;
    }
    
    .label-{{ start_year }}-{{ short_code }} .est-date {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        font-size: {{ style.font_size_subheader - 1 }}pt;
        margin-top: 0.5mm;
        opacity: 0.8;
    }
    
    .label-{{ start_year }}-{{ short_code }} .content-area {
        padding: {{ style.padding }}mm;
        padding-top: 5mm;
        padding-bottom: 0mm;
        max-height: calc({{ height_mm }}mm - {{ style.top_bar_height_mm }}mm);
        overflow: hidden;
        box-sizing: border-box;
        position: relative;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }
    
    .label-{{ start_year }}-{{ short_code }} .subcategory-text {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        font-size: {{ style.font_size_body - 1 }}pt;
        line-height: 1.3;
        padding: 0;
        margin: 0;
        max-height: 100%;
        overflow: hidden;
        text-align: center;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline {
        position: absolute;
        bottom: 3mm;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        z-index: 10;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-track {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-column {
        width: 33.33%;
        height: 6mm;
        vertical-align: middle;
        text-align: center;
        position: relative;
        padding: 0;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-year {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        height: 100%;
    }
    
    /* Inner cells (not in last row) have vertical line going down */
    .label-{{ start_year }}-{{ short_code }} .inner-cell::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 2px;
        height: 100%;
        background: #666;
        transform: translateX(-50%);
    }
    
    /* Last element cells - horizontal line going right from center */
    .label-{{ start_year }}-{{ short_code }} .last-element::before {
        content: '';
        position: absolute;
        bottom: 50%;
        left: 50%;
        width: 50%;
        height: 50%;
        border-bottom: solid 2px #666;
        border-right: solid 2px #666;
        border-bottom-right-radius: 4px;
        transform: translateY(1px);
    }
    
    /* Last element cells - vertical line going up from center to top */
    .label-{{ start_year }}-{{ short_code }} .last-element::after {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 100%;
        width: 50%;
        height: 150%;
        border-top: solid 2px #666;
        border-left: solid 2px #666;
        border-top-left-radius: 4px;
        transform: translateY(1px);
    }
    
    /* Initial element (1,1) - horizontal line coming from left */
    .label-{{ start_year }}-{{ short_code }} .initial-elem::before {
        content: '';
        position: absolute;
        top: 50%;
        right: 50%;
        width: 100%;
        height: 2px;
        background: #666;
        transform: translateY(-50%);
    }
    
    /* Final cell - corner going up then right */
    .label-{{ start_year }}-{{ short_code }} .final-cell::before {
        content: '';
        position: absolute;
        bottom: 50%;
        left: 50%;
        width: 50%;
        height: 100%;
        border-bottom: solid 2px #666;
        border-right: solid 2px #666;
        border-bottom-right-radius: 4px;
    }
    
    /* Final cell - upward continuation */
    .label-{{ start_year }}-{{ short_code }} .final-cell::after {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 100%;
        width: 50%;
        height: 150%;
        border-top: solid 2px #666;
        border-left: solid 2px #666;
        border-top-left-radius: 4px;
    }
    
    .label-{{ start_year }}-{{ short_code }} .timeline-circle {
        width: 2mm;
        height: 2mm;
        border: 1px solid black;
        border-radius: 50%;
        background-color: {{ accent_color }};
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
        position: relative;
        z-index: 3;
    }
    
    .label-{{ start_year }}-{{ short_code }} .year-blank {
        position: absolute;
        bottom: -20%;
        left: 50%;
        transform: translateX(-50%);
        width: 40%;
        background-color: color-mix(in srgb, {{ accent_color }} 15%, white);
        height: 50%;
        border-radius: 2px;
        z-index: 5;
    }
    
    .label-{{ start_year }}-{{ short_code }} .year-label {
        position: absolute;
        bottom: -20%;
        left: 50%;
        transform: translateX(-50%);
        width: 40%;
        height: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4pt;
        font-weight: bold;
        z-index: 6;
    }
    
    {% if is_emergency %}
    .label-{{ start_year }}-{{ short_code }} .emergency-message {
        position: relative;
        padding: 2mm {{ style.padding }}mm;
        text-align: center;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        font-weight: 700;
        font-size: 5.5pt;
        line-height: 1.3;
        word-wrap: break-word;
        overflow-wrap: break-word;
        hyphens: auto;
        z-index: 5;
    }
    
    .label-{{ start_year }}-{{ short_code }} .emergency-icon {
        margin: 0 auto 2mm auto;
        display: block;
        width: 80%;
    }
    
    .label-{{ start_year }}-{{ short_code }} .emergency-icon img {
        display: block;
        margin: 0 auto;
        width: 100%;
        height: auto;
    }
    
    .label-{{ start_year }}-{{ short_code }} .emergency-text {
        margin-top: 2mm;
    }
    {% endif %}
</style>

<script>
    // Calculate contrast color for text based on background
    (function() {
        function getContrastColor(hexColor) {
            hexColor = hexColor.replace('#', '');
            const r = parseInt(hexColor.substr(0, 2), 16);
            const g = parseInt(hexColor.substr(2, 2), 16);
            const b = parseInt(hexColor.substr(4, 2), 16);
            const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
            return luminance > 0.5 ? '#000000' : '#ffffff';
        }
        
        window.addEventListener('DOMContentLoaded', function() {
            const topBar = document.querySelector('.label-{{ start_year }}-{{ short_code }} .top-bar');
            if (topBar) {
                const bgColor = window.getComputedStyle(topBar).backgroundColor;
                const rgb = bgColor.match(/\d+/g);
                if (rgb) {
                    const hex = '#' + rgb.map(x => {
                        const h = parseInt(x).toString(16);
                        return h.length === 1 ? '0' + h : h;
                    }).join('');
                    const contrastColor = getContrastColor(hex);
                    topBar.style.color = contrastColor;
                }
            }
        });
    })();
</script>

